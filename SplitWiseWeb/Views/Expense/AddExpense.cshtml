@{
    ViewData["Title"] = "Add Expense";
}

<breadcrumb></breadcrumb>
<form asp-action="SaveExpense" asp-controller="Expense">
    <div class="d-flex flex-column gap-3">
        <div class="d-flex flex-wrap gap-3">
            <!-- Title -->
            <div class="d-flex gap-3 align-items-center">
                <div class="col-auto">
                    <label for="expenseTitle" class="col-form-label fw-semibold">Title:</label>
                </div>
                <div class="col-auto">
                    <input type="text" id="expenseTitle" class="form-control">
                </div>
            </div>
            <!-- Members -->
            <div class="d-flex flex-wrap gap-3 align-items-center">
                <div class="col-auto">
                    <label for="expenseTitle" class="col-form-label fw-semibold">Members:</label>
                </div>
                <div class="btn-group">
                    <div class="selectedMembersDiv d-flex border border-secondary-subtle overflow-x-auto"></div>
                    <button type="button" class="btn dropdown-toggle dropdown-toggle-split border-secondary-subtle rounded-0"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="visually-hidden">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdownList dropdown-menu w-100">
                        <li><a class="dropdown-item" href="#">Action</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="d-flex flex-wrap gap-3">
            <!-- Amount -->
            <div class="d-flex gap-3 align-items-center">
                <div class="col-auto">
                    <label for="expenseAmount" class="col-form-label fw-semibold">Amount:</label>
                </div>
                <div class="col-auto">
                    <input type="text" id="expenseAmount" class="form-control">
                </div>
            </div>
            <!-- Currency -->
            <div class="d-flex gap-3 align-items-center">
                <div class="col-auto">
                    <label for="expenseAmount" class="col-form-label fw-semibold">Currency:</label>
                </div>
                <div class="col-auto">
                    <select class="form-select" aria-label="Default select example">
                        <option value="1">One</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</form>