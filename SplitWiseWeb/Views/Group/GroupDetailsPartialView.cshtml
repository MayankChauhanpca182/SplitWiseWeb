@model GroupVM
@{
    int currentUserId = int.Parse(User.FindFirst("id")?.Value);
}

<breadcrumb></breadcrumb>
<h3
    class="d-flex flex-wrap justify-content-between align-items-center gap-3 bg-white mb-3 px-3 py-3 text-dark-emphasis shadow">
    <div class="d-flex align-items-center gap-3">
        <img src="@(Model.ImagePath ?? "/images/default_group_img.png")" alt="Group image"
            class="rounded-circle border border-dark-subtle object-fit-cover" width="70px" height="70px">
        @Model.Name
    </div>

    <div class="d-flex align-items-center gap-2">
        <button class="btn btn-primary" type="button" onclick="addgroupMemberModal(@Model.Id)">Add new member</button>
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                aria-expanded="false">
                Members
            </button>
            <ul class="dropdown-menu p-2 w-auto" id="groupMemberList">
                @foreach (GroupMemberVM user in Model.Members)
                {
                    <li class="d-flex justify-content-between align-items-center gap-3">
                        <div class="d-flex align-items-center gap-2">
                            <img src=@(user.ProfileImagePath ?? "/images/Default_pfp.png") alt=""
                                class="rounded-circle border border-dark-subtle object-fit-cover" width="30px"
                                height="30px">
                            <span class="text-nowrap">
                                @(user.UserId == currentUserId ? "You" : user.Name)
                            </span>
                        </div>
                        @if (user.UserId != currentUserId)
                        {
                            <a class="btn border-0 px-0" title="Remove Member"
                                onclick="removeGroupMember(@user.Id)">
                                <i class="bi bi-person-x-fill text-danger"></i>
                            </a>
                        }
                    </li>
                }
            </ul>
        </div>
    </div>
</h3>

@* Group members *@
<script>
    // Fetch group members
    function fetchFriends(groupId) {
        let filter = {
            PageNumber: currentPage,
            PageSize: $("#groupListPageSize").val(),
            SearchString: $("#groupListSearch").val()
        };
        
        $.ajax({
            url: "/Friend/FriendList",
            type: "GET",
            data: { groupId },
            success: function (response) {
                if (!response.statusCode) {
                    if (response.success == false) {
                        toastr.error(response.message);
                    }
                    else {
                        $("#groupMemberList").html(response);
                    }
                }
            },
            error: function () {
                toastr.error("Internal server error.");
            }
        });
    }

    // Fetch add new member modal
    function addgroupMemberModal(groupId) {
        $("#largeModalContent").empty();
        $.ajax({
            url: "/Group/AddgroupMemberModal",
            type: "GET",
            data: { groupId },
            success: function (response) {
                if (!response.statusCode) {
                    $("#largeModalContent").html(response);
                    $("#largeModal").modal("show");
                }
            },
            error: function () {
                $("#largeModal").modal("hide");
                toastr.error('@(NotificationMessages.CanNot.Replace("{0}", "add friend"))');
            },
        });
    }

    // Remove group member
    function removeGroupMember(groupMemberId) {
        $.ajax({
            url: "/Group/RemoveGroupMembers",
            type: "POST",
            data: { groupMemberId },
            success: function (response) {
                if (!response.statusCode) {
                    if (response.success == false) {
                        toastr.error(response.message);
                    }
                    else {
                        toastr.success(response.message);
                        // Update member list
                    }
                }
            },
            error: function () {
                toastr.error('@NotificationMessages.InternalServerError');
            }
        });
    }
</script>
